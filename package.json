{
    "name": "pcupext",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && bun run ./postBuild.ts",
        "build:watch": "vite build --watch",
        "build-ext": "vite build && bun run ./postBuild.ts && web-ext build -s ./build --overwrite-dest",
        "sign-ext": "vite build && bun run ./postBuild.ts && ./sign-ext.sh",
        "preview": "vite preview",
        "clean": "rm -rf build",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "fmt": "prettier --write .",
        "lint": "prettier --check . && eslint .",
        "lint-ext": "web-ext lint"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.7",
        "@eslint/js": "^9.22.0",
        "@stylistic/eslint-plugin": "^4.2.0",
        "@sveltejs/adapter-static": "^3.0.8",
        "@sveltejs/enhanced-img": "^0.4.4",
        "@sveltejs/kit": "^2.20.0",
        "@sveltejs/vite-plugin-svelte": "^5.0.3",
        "@types/bun": "^1.2.5",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-svelte": "^3.3.2",
        "globals": "^16.0.0",
        "prettier": "^3.5.3",
        "prettier-plugin-svelte": "^3.3.3",
        "svelte": "^5.23.1",
        "svelte-check": "^4.1.5",
        "tiny-glob": "^0.2.9",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.1",
        "vite": "^6.2.2",
        "vite-plugin-compression": "^0.5.1",
        "web-ext": "^8.5.0"
    }
}
