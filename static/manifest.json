{
    "$schema": "https://json.schemastore.org/chrome-manifest",
    "manifest_version": 3,

    "name": "pcup",
    "description": "ppk",
    "version": "0.1.1",

    "action": {
        "default_title": "pcup",
        "default_popup": "index.html",
        "default_icon": {
            "32": "favicon.png"
        }
    },

    "permissions": ["storage"],
    "host_permissions": ["*://pcup.trevrosa.dev/*"],

    "browser_specific_settings": {
        "gecko": {
            "id": "pcupext@trevrosa.dev"
        }
    }
}
